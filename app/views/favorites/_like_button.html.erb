<% if current_user.like?(item) %>

  <%= form_tag(favorite_path(item.id), method: :delete) do %>
  <%= hidden_field_tag :item_id, item.id %>
  <%= submit_tag 'Unlike',class: 'fav-btn' %>
  <% end %>

<% else %>

  <%= form_tag(favorites_path) do %>
  <%= hidden_field_tag :item_code, item.code %>
  <%= submit_tag 'Like it',class: 'fav-btn' %>
  <% end %>

<% end %>
